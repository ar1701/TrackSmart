<!DOCTYPE html>
<html>
  <head>
    <title>Test Admin Login</title>
    <script>
      async function testAdminLogin() {
        try {
          const response = await fetch("/api/admin/login", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({
              username: "admin",
              password: "asdf",
              rememberMe: false,
            }),
          });

          const result = await response.json();
          document.getElementById("result").innerHTML = JSON.stringify(
            result,
            null,
            2
          );

          if (result.success) {
            document.getElementById("status").innerHTML =
              '<p style="color: green;">Login successful! Redirecting to admin dashboard...</p>';
            setTimeout(() => {
              window.location.href = "/admin/dashboard";
            }, 2000);
          } else {
            document.getElementById("status").innerHTML =
              '<p style="color: red;">Login failed: ' + result.message + "</p>";
          }
        } catch (error) {
          document.getElementById("result").innerHTML =
            "Error: " + error.message;
          document.getElementById("status").innerHTML =
            '<p style="color: red;">Network error</p>';
        }
      }
    </script>
  </head>
  <body>
    <h1>Test Admin Login</h1>
    <button onclick="testAdminLogin()">Test Admin Login (admin/asdf)</button>
    <div id="status"></div>
    <pre id="result"></pre>
  </body>
</html>
