<!-- Template Javascript -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const shipments = [
      {
        user: "Ankit P.",
        packageId: "PKG12345",
        origin: "Delhi",
        destination: "Mumbai",
        status: "In Transit",
        carrier: "Delhivery",
        trackLink: "#",
      },
      {
        user: "Neha R.",
        packageId: "PKG56789",
        origin: "Bangalore",
        destination: "Kolkata",
        status: "Delivered",
        carrier: "BlueDart",
        trackLink: "#",
      },
      {
        user: "Rahul M.",
        packageId: "PKG90123",
        origin: "Hyderabad",
        destination: "Chennai",
        status: "Pending Pickup",
        carrier: "Shiprocket",
        trackLink: "#",
      },
    ];

    const tbody = document.getElementById("shipmentTable");

    shipments.forEach((shipment) => {
      const row = document.createElement("tr");
      row.innerHTML = `
        <td>${shipment.user}</td>
        <td>${shipment.packageId}</td>
        <td>${shipment.origin}</td>
        <td>${shipment.destination}</td>
        <td><span class="badge bg-${
          shipment.status === "Delivered"
            ? "success"
            : shipment.status === "Pending Pickup"
            ? "warning"
            : "info"
        }">${shipment.status}</span></td>
        <td>${shipment.carrier}</td>
        <td><a href="${
          shipment.trackLink
        }" class="btn btn-sm btn-outline-primary">Track</a></td>
      `;
      tbody.appendChild(row);
    });
  });
</script>

