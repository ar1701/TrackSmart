<%- include('partials/header', { title: 'Track Package - TrackSmart',
currentPage: 'track' }) %>

<!-- Page Header Start -->
<div class="container-fluid page-header py-5" style="margin-bottom: 6rem">
  <div class="container py-5">
    <h1 class="display-3 text-white mb-3 animated slideInDown">
      Tracks Parcels
    </h1>
    <nav aria-label="breadcrumb animated slideInDown">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
        <li class="breadcrumb-item">
          <a class="text-white" href="#">Pages</a>
        </li>
        <li class="breadcrumb-item text-white active" aria-current="page">
          Track Parcels
        </li>
      </ol>
    </nav>
  </div>
</div>
<!-- Page Header End -->

<!-- Replace the Team Section with this Seller-Tracking Dashboard -->
<div class="container-xxl">
  <div class="container">
    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
      <h6 class="text-secondary text-uppercase">Seller Dashboard</h6>
      <h1 class="mb-5">Track User Shipments</h1>
    </div>

    <div class="table-responsive">
      <table class="table table-bordered table-striped text-center">
        <thead class="bg-primary text-white">
          <tr>
            <th>User</th>
            <th>Package ID</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Status</th>
            <th>Carrier</th>
            <th>Tracking</th>
          </tr>
        </thead>
        <tbody id="shipmentTable">
          <!-- Dummy data filled by JavaScript -->
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Back to Top -->
<a href="#" class="btn btn-lg btn-primary btn-lg-square rounded-0 back-to-top"
  ><i class="bi bi-arrow-up"></i
></a>

<!-- JavaScript Libraries -->
<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="lib/wow/wow.min.js"></script>
<script src="lib/easing/easing.min.js"></script>
<script src="lib/waypoints/waypoints.min.js"></script>
<script src="lib/counterup/counterup.min.js"></script>
<script src="lib/owlcarousel/owl.carousel.min.js"></script>

<!-- Template Javascript -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const shipments = [
      {
        user: "Ankit P.",
        packageId: "PKG12345",
        origin: "Delhi",
        destination: "Mumbai",
        status: "In Transit",
        carrier: "Delhivery",
        trackLink: "#",
      },
      {
        user: "Neha R.",
        packageId: "PKG56789",
        origin: "Bangalore",
        destination: "Kolkata",
        status: "Delivered",
        carrier: "BlueDart",
        trackLink: "#",
      },
      {
        user: "Rahul M.",
        packageId: "PKG90123",
        origin: "Hyderabad",
        destination: "Chennai",
        status: "Pending Pickup",
        carrier: "Shiprocket",
        trackLink: "#",
      },
    ];

    const tbody = document.getElementById("shipmentTable");

    shipments.forEach((shipment) => {
      const row = document.createElement("tr");
      row.innerHTML = `
        <td>${shipment.user}</td>
        <td>${shipment.packageId}</td>
        <td>${shipment.origin}</td>
        <td>${shipment.destination}</td>
        <td><span class="badge bg-${
          shipment.status === "Delivered"
            ? "success"
            : shipment.status === "Pending Pickup"
            ? "warning"
            : "info"
        }">${shipment.status}</span></td>
        <td>${shipment.carrier}</td>
        <td><a href="${
          shipment.trackLink
        }" class="btn btn-sm btn-outline-primary">Track</a></td>
      `;
      tbody.appendChild(row);
    });
  });
</script>

<%- include('partials/footer') %>
