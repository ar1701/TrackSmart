<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title><%= title || 'TrackSmart' %></title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="keywords" />
    <meta content="" name="description" />

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon" />

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&family=Roboto:wght@500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Font Stylesheet -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet" />
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="css/style.css" rel="stylesheet" />

    <!-- Additional CSS if needed -->
    <% if (typeof additionalCSS !== 'undefined') { %> <%- additionalCSS %> <% }
    %>
  </head>

  <body>
    <!-- Spinner Start -->
    <div
      id="spinner"
      class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center"
    >
      <div
        class="spinner-grow text-primary"
        style="width: 3rem; height: 3rem"
        role="status"
      >
        <span class="sr-only">Loading...</span>
      </div>
    </div>
    <!-- Spinner End -->

    <!-- Navbar Start -->
    <nav
      class="navbar navbar-expand-lg bg-white navbar-light shadow border-top border-5 border-primary sticky-top p-0"
    >
      <a
        href="/"
        class="navbar-brand bg-primary d-flex align-items-center px-4 px-lg-5"
      >
        <h3 class="mb-2 text-white">TrackSmart</h3>
      </a>
      <button
        type="button"
        class="navbar-toggler me-4"
        data-bs-toggle="collapse"
        data-bs-target="#navbarCollapse"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <div class="navbar-nav ms-auto p-4 p-lg-0">
          <a
            href="/"
            class="nav-item nav-link <%= currentPage === 'home' ? 'active' : '' %>"
            >Home</a
          >
          <a
            href="/about"
            class="nav-item nav-link <%= currentPage === 'about' ? 'active' : '' %>"
            >About</a
          >
          <a
            href="/service"
            class="nav-item nav-link <%= currentPage === 'service' ? 'active' : '' %>"
            >Services</a
          >
          <div class="nav-item dropdown">
            <a
              href="#"
              class="nav-link dropdown-toggle"
              data-bs-toggle="dropdown"
              >Pages</a
            >
            <div class="dropdown-menu fade-up m-0">
              <a href="/onboard-carrier" class="dropdown-item"
                >Onboard a Carrier</a
              >
              <a href="/onboard-seller" class="dropdown-item"
                >Onboard a Seller</a
              >
              <a href="/place-order" class="dropdown-item">Place an Order</a>
              <a href="/track" class="dropdown-item">Track Your Package</a>
              <a href="/update_status" class="dropdown-item"
                >Update Shipment Status</a
              >
              <a href="/analytics" class="dropdown-item"
                >Analytics & Dashboard</a
              >
            </div>
          </div>
          <a
            href="/contact"
            class="nav-item nav-link <%= currentPage === 'contact' ? 'active' : '' %>"
            >Contact</a
          >
          <a
            href="/main-login"
            class="nav-item nav-link <%= currentPage === 'main-login' ? 'active' : '' %>"
            >Login</a
          >
        </div>
        <h4 class="m-0 pe-lg-5 d-none d-lg-block"></h4>
      </div>
    </nav>
    <!-- Navbar End -->
   <script type="text/javascript">
  (function(d, t) {
      var v = d.createElement(t), s = d.getElementsByTagName(t)[0];
      v.onload = function() {
        window.voiceflow.chat.load({
          verify: { projectID: '6579cc658d25eaed27cc0542' },
          url: 'https://general-runtime.voiceflow.com',
          versionID: 'production',
          voice: {
            url: "https://runtime-api.voiceflow.com"
          }
        });
      }
      v.src = "https://cdn.voiceflow.com/widget-next/bundle.mjs"; v.type = "text/javascript"; s.parentNode.insertBefore(v, s);
  })(document, 'script');
</script>
  </body>
</html>
